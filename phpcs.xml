<?xml version="1.0"?>
<ruleset name="Tic Tac Toe API">
    <description>PSR2 Coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <exclude-pattern>*/tests/*\.(inc|css|js)</exclude-pattern>

    <file>app</file>
    <file>tests/behavior</file>
    <file>tests/unit</file>
</ruleset>